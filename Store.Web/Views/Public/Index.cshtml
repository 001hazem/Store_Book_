<style>
    .custom-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .custom-card .card-img-top {
        object-fit: cover;
        height: 200px;
    }


    .custom-card .card-body {
        padding: 1.25rem;
    }
</style>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card custom-card h-100">
                <img src="~/Images/@product.ImagesUrl" class="card border-0 p-3 shadow  border-top border-5 rounded" />
                <div class="card-body">
                    <h5 class="card-title text-center">@product.Title</h5>
                    <p class="card-text text-center">By <b>@product.Author</b></p>
                    <p class="card-text text-center">
                        List Price:
                        <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                    </p>
                    <p class="card-text text-center">
                        As low as: <span>@product.Price100.ToString("c")</span>
                    </p>
                    <div class="text-center">
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
